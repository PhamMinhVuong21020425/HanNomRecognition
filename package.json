{
  "name": "sino-nom",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "next": "next dev",
    "build": "npx ts-node build.ts && next build",
    "start": "cross-env NODE_ENV=production node dist/bin/www.js",
    "dev": "nodemon --exec ts-node src/bin/www.ts",
    "server": "SET DEBUG=sino-nom:* & npm run dev",
    "watch": "tsc -w",
    "lint": "eslint src/**/*.{ts,tsx,json,pug}",
    "lint:fix": "eslint --fix src/**/*.{ts,tsx,json,pug}",
    "format": "prettier --write src/**/*.{ts,tsx,json,pug}",
    "typeorm": "npx typeorm-ts-node-commonjs",
    "migrate:generate": "npm run typeorm -- migration:generate -d ./src/config/data-source.ts",
    "migrate:run": "npm run typeorm -- migration:run -d ./src/config/data-source.ts",
    "migrate:revert": "npm run typeorm -- migration:revert -d ./src/config/data-source.ts",
    "migrate:show": "npm run typeorm -- migration:show -d ./src/config/data-source.ts",
    "tailwind:css": "postcss src/public/stylesheets/tailwind.css -o src/public/stylesheets/global.css -w"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cookie-parser": "~1.4.7",
    "cross-env": "^7.0.3",
    "debug": "~4.3.7",
    "dotenv": "^16.4.5",
    "express": "~4.21.1",
    "fs-extra": "^11.2.0",
    "http-errors": "~2.0.0",
    "jet-logger": "^2.0.1",
    "morgan": "~1.10.0",
    "next": "^14.2.18",
    "pug": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.7.0",
    "@prettier/plugin-pug": "^3.0.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/http-errors": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-pug": "^1.2.5",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.12.0",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0"
  },
  "description": "Project with Node.js and Express framework for a major assignment in the Sofware Development Laboratory.",
  "main": "src/bin/www.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PhamMinhVuong21020425/HanNomRecognition"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PhamMinhVuong21020425/HanNomRecognition/issues"
  },
  "homepage": "https://github.com/PhamMinhVuong21020425/HanNomRecognition#readme"
}
